{
    "id": null,
    "title": "Go Microservices Monitoring",
    "tags": [
        "microservices",
        "go",
        "prometheus"
    ],
    "style": "dark",
    "timezone": "browser",
    "panels": [
        {
            "id": 1,
            "title": "HTTP Requests Total",
            "type": "stat",
            "targets": [
                {
                    "expr": "sum(rate(http_requests_total[5m])) by (service)",
                    "legendFormat": "{{service}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "mode": "palette-classic"
                    },
                    "custom": {
                        "hideFrom": {
                            "legend": false,
                            "tooltip": false,
                            "vis": false
                        }
                    },
                    "mappings": [],
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "red",
                                "value": 80
                            }
                        ]
                    }
                }
            },
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 0
            }
        },
        {
            "id": 2,
            "title": "HTTP Request Duration",
            "type": "graph",
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m])) by (service)",
                    "legendFormat": "95th percentile - {{service}}"
                },
                {
                    "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m])) by (service)",
                    "legendFormat": "50th percentile - {{service}}"
                }
            ],
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 0
            }
        },
        {
            "id": 3,
            "title": "gRPC Requests Total",
            "type": "stat",
            "targets": [
                {
                    "expr": "sum(rate(grpc_requests_total[5m])) by (service)",
                    "legendFormat": "{{service}}"
                }
            ],
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 8
            }
        },
        {
            "id": 4,
            "title": "gRPC Request Duration",
            "type": "graph",
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, rate(grpc_request_duration_seconds_bucket[5m])) by (service)",
                    "legendFormat": "95th percentile - {{service}}"
                }
            ],
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 8
